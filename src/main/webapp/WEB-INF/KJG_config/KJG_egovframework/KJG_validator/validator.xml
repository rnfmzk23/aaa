<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

    <formset>
        <form name="KJG_SampleVO">
        	<field property="name" depends="required">
        		<arg0 key="title.sample.name" />
			</field>
			<field property="description" depends="required">
                <arg0 key="title.sample.description" />
            </field>
        	<field property="regUser" depends="required">
        		<arg0 key="title.sample.regUser" />
			</field>
        </form>
    </formset>
    
    <formset>
        <form name="KJG_CodeVO">
        	<field property="code" depends="required">
        		<arg0 key="title.code.code" />
			</field>
			<field property="codename" depends="required">
                <arg0 key="title.code.codename" />
            </field>
        	<field property="codedc" depends="required">
        		<arg0 key="title.code.codedc" />
			</field>
        </form>
    </formset>
    
    <formset>
        <form name="KJG_SchlVO">
			<field property="schlname" depends="required">
                <arg0 key="title.schl.schlname" />
            </field>
        	<field property="schlregion" depends="required">
        		<arg0 key="title.schl.schlregion" />
			</field>
        	<field property="schlurl" depends="required">
        		<arg0 key="title.schl.schlurl" />
			</field>
        </form>
    </formset>

</form-validation>